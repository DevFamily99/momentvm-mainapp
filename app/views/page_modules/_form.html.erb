<%= form_with(model: page_module, local: true, class: "rails-form") do |form| %>
  <% if page_module.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(page_module.errors.count, "error") %> prohibited this page_module from being saved:</h2>

      <ul>
      <% page_module.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :schedule %>
    <%= form.text_field :schedule, id: :page_module_schedule %>
  </div>

  <div class="field">
    <%= form.label :rank %>
    <%= form.text_field :rank, id: :page_module_rank %>
  </div>

  <div class="field">
    <%# <%= form.label :page_id %> %>
    <%# <%= form.text_field :page_id, id: :page_module_page_id %> %>
  </div>

  <div class="field">
    <%= form.label :template_id %>
    <%= form.text_field :template_id, id: :page_module_template_id %>
  </div>

  <div class="field">
    <%= form.label :body %>
    <%= form.text_area :body, id: :page_module_body %>
  </div>

  <div class="actions">
    <%= form.submit %>

    <% if @page%>
   <%= link_to 'Back', @page, class: "ui button" %>
    <%else%>
       <%= link_to 'Back', pages_path, class: "ui button" %>
    <% end%>

  </div>
<% end %>
