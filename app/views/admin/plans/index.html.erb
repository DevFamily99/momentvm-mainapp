<h1> Plans </h1>


<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="1"></th>
      <th>Country limit</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>


  <% @plans.each do |plan|%>
    <tr>
        <td>
            <%= plan.name %>
        </td>
        <th colspan="1"></th>
        <td>
            <%= plan.country_limit %>
        </td>
        <td>
          <%= link_to edit_admin_plan_path(plan), class: "ui button" do%>
            <i class="icon pencil"></i>Edit
          <% end %>
        </td>
        <td>
          <%= link_to admin_plan_path(plan), method: :delete, data: { confirm: 'Are you sure?' }, class: "red ui button" do %>
            <i class="icon delete"></i>Delete
          <% end %>
        </td>
    </tr>
  <%end%>

  </tbody>
</table>

<br>


<%= link_to new_admin_plan_path, class: "ui button primary new-btn" do %>
  <i class="plus cicle icon"></i>New Plan
<% end%>