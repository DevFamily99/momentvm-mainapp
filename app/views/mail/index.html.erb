<p id="notice"><%= notice %></p>

<h1>Mails</h1>

<table>
  <thead>
    <tr>
      <th> Name </th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @mails.each do |mail| %>
      <tr>
        <td><%= link_to mail.subject, mail %></td>
        <td>
            <%= link_to mail, method: :delete, data: { confirm: 'Are you sure?' }, class: "red ui button" do%>
              <i class="icon delete"></i>Delete
            <% end %>
        </td>
            
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to new_mail_path, class: "ui button primary" do %>
<i class="plus cicle icon"></i>New Mail
<% end%>
