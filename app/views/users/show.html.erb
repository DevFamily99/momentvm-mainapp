<p>
<strong>Allowed countries</strong>

<div class="locales">
   <% SettingService.get_named_locale_variants(current_user).sort_by { |variant| variant[:locale]}.each do |named_locale| %>
   
        <div class="locales-select">
        <% if @user.allowed_countries &&  @user.allowed_countries_include?(named_locale[:locale])%>

          <div class="switch disabled">
            <%= check_box_tag "locales[#{named_locale[:locale]}]", "yes", @user.allowed_countries && @user.allowed_countries_include?(named_locale[:locale]),disabled: true, id: "#{named_locale[:locale]} (#{named_locale[:name]})"%>
            <%= label_tag "#{named_locale[:locale]} (#{named_locale[:name]})" %><%= "#{named_locale[:locale]} (#{named_locale[:name]})"%>
          </div>
          <% end %>
        </div>
 
    <% end %>
</div>

</p>

