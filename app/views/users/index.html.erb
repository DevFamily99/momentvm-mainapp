
<h1>Users</h1>

<table>
  <thead>
    <tr>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.email, user  %></td>
        <td><%= link_to edit_user_path(user), class: "ui button" do%>
              <i class="icon pencil"></i>Edit
        <% end %>
        </td>
        <td><%= link_to  user, method: :delete, data: { confirm: 'Are you sure?' }, class: "red ui button" do %>
        <i class="icon delete"></i>Delete
        <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>


<%= link_to new_user_path, class: "ui button primary new-btn" do %>
<i class="plus cicle icon"></i>New User
<% end%>

