<h1>Template Schemas</h1>

<table>
  <thead>
    <tr>
      <th>Template</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @template_schemas.each do |template_schema| %>
      <tr>
        <td><%= link_to template_schema do %>
          <%= template_schema.template.name %>
          <% end %>
        </td>

        <% if current_user.has_skill?(:can_edit_templates) %>
        <td><%= link_to edit_template_schema_path(template_schema), class: "ui button" do %>
            <i class="icon pencil"></i>Edit
        <% end %>
        
        </td>
        <td><%= link_to  template_schema, method: :delete, data: { confirm: 'Are you sure?' }, class: "ui red button" do %>
             <i class="icon delete"></i>Delete
             <% end %>
        </td>
                   <% end %>
      </tr>
    <% end %>
  </tbody>
</table>



