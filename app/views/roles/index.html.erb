<p id="notice"><%= notice %></p>

<h1>Roles</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @roles.each do |role| %>
    <tr>
      <td><%= link_to role.name, role %></td>
      <td>
        <%= link_to edit_role_path(role), class: "ui button" do%>
        <i class="icon pencil"></i>Edit <% end %>
      </td>
      <% if !role.name.downcase.match(/admin/) %>
      <td>
        <%= link_to role, method: :delete, data: { confirm: 'Are you sure?' },
        class: "red ui button" do%> <i class="icon delete"></i>Delete <% end %>
      </td>
      <% end %>
    </tr>
    <% end %>
  </tbody>
</table>

<br />

<%= link_to new_role_path, class: "ui button primary" do %>
<i class="plus cicle icon"></i>New Role <% end%>
